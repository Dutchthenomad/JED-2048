{
  "environment": "production",
  "bot": {
    "headless": true,
    "debug": false,
    "log_level": "INFO",
    "browser_type": "chromium",
    "max_moves": 200,
    "max_retries": 3
  },
  "performance": {
    "monitoring_enabled": true,
    "log_interval": 5.0,
    "enable_alerts": true,
    "alert_thresholds": {
      "cpu_percent": 80.0,
      "memory_mb": 1000.0,
      "memory_percent": 75.0,
      "screenshot_time": 2.0,
      "analysis_time": 1.0,
      "strategy_time": 0.5,
      "fps": 0.5
    }
  },
  "strategy": {
    "weights": {
      "empty_tiles": 150.0,
      "merge_potential": 100.0,
      "corner_bonus": 250.0,
      "monotonicity": 75.0,
      "max_tile_value": 15.0
    }
  },
  "connection": {
    "primary_url": "https://2048game.com/",
    "fallback_urls": [
      "https://gabrielecirulli.github.io/2048/",
      "https://play2048.co/"
    ],
    "timeout_seconds": 60,
    "retry_attempts": 3
  }
}